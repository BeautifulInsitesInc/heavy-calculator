<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 50
            size_hint: (1,.2)

        Image:
            source: '666.jpg'
            id: display_image
            allow_stretch: False
            keep_ratio: True
            size_hint: (1,.0001)
            opacity: 0

        GridLayout:
            cols: 4
            rows: 5

           # ROW 1
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "%"
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "<<"
                on_press: root.remove()
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "C"
                id: clear
                on_press: root.clear()
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "/"
                on_press: root.math_sign('/')
           
            # ROW 2
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "7"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(7)
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "8"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(8)
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "9"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(9)
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "*"
                on_press: root.math_sign('*')
           
            # ROW 3
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "4"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(4)
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "5"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(5)
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "6"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(6)
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "-"
                on_press: root.math_sign('-')
 
            # ROW 4
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "1"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(1)
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "2"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(2)
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "3"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(3)
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "+"
                on_press: root.math_sign('+')
   
            # ROW 5
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "+/-"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.plus_minus()
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "0"
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(0)
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "."
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.dot()
            Button:
                size_hint: (.2,.4)
                font_size: 32
                text: "="
                on_press: root.equals()
                
   